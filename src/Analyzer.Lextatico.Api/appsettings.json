{
    "TokenConfiguration": {
        "Audience": "LextaticoApp",
        "Issuer": "LextaticoApp",
        "Seconds": 1800,
        "SecondsRefresh": 3600
    },
    "ConnectionStrings": {
        "LextaticoContext": "Server=tcp:lextatico.database.windows.net,1433;Initial Catalog=Analyzer.Lextatico;Persist Security Info=False;User ID=cassiano;MultipleActiveResultSets=true;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
    },
    "EmailSettings": {
        "Email": "noreply@Analyzer.Lextatico.com.br",
        "DisplayName": "Lextatico",
        "Host": "smtp.umbler.com",
        "Port": 587
    },
    "Urls": {
        "LextaticoFront": "https://Analyzer.Lextatico.com.br"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentName",
            "WithCorrelationId"
        ],
        "Properties": {
            "Application": "Analyzer.Lextatico.Api"
        },
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            }
        ]
    },
    "AllowedHosts": "*"
}
